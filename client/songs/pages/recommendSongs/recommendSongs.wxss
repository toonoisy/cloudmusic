.recommendSongsContainer .header {
  position: relative;
}

.recommendSongsContainer .headerImg {
  width: 100%;
  height: 300rpx;
}

.recommendSongsContainer .date {
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -90rpx;
  top: 50%;
  margin-top: -50rpx;
  font-size: 40rpx;
  color: #fff;
}

.recommendSongsContainer .songList {
  border-radius: 40rpx;
  position: relative;
  top: -20rpx;
  padding: 20rpx;
  background: #fff;
}

.recommendSongsContainer .songList .header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.recommendSongsContainer .songList .header .multiSelect {
  font-size: 24rpx;
  color: #333;
}

.recommendSongsContainer .songList .songListScroll {
  height: calc(100vh - 300rpx - 110rpx);
}

.recommendSongsContainer .songList .songListScroll .songItem {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
}

.recommendSongsContainer .songList .songListScroll .songItem .songContent {
  display: flex;
  align-items: center;
}

.recommendSongsContainer .songList .songListScroll .songItem .songContent .cover {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.recommendSongsContainer .songList .songListScroll .songItem .songContent .info {
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
}

